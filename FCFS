#include<stdio.h>
#include<stdlib.h>

struct fcfs{
int pid;
int tat; // arrival time
int bt; // burst time
int tct; // completion time
int wt; // waiting time
int tatime; // turnaround time
} p[10];

int main()
{
int i, n;
int twt = 0, ttat = 0;
printf("\nFCFS Program\n");
printf("Enter the number of processes: ");
scanf("%d", &n);
for(i = 0; i < n; i++)
{
p[i].pid = i + 1;
printf("\nEnter arrival time of process %d: ", p[i].pid);
scanf("%d", &p[i].tat);
printf("Enter burst time of process %d: ", p[i].pid);
scanf("%d", &p[i].bt);
}
p[0].tct = p[0].tat + p[0].bt;
p[0].tatime = p[0].tct - p[0].tat;
p[0].wt = p[0].tatime - p[0].bt;
twt += p[0].wt;
ttat += p[0].tatime;
for(i = 1; i < n; i++)
{
p[i].tct = p[i - 1].tct + p[i].bt;
p[i].tatime = p[i].tct - p[i].tat;
p[i].wt = p[i].tatime - p[i].bt;
twt += p[i].wt;
ttat += p[i].tatime;
}
printf("\nProcess\tArrival Time\tBurst Time\tCompletion Time\tWaiting Time\tTurnaround Time\n");
for(i = 0; i < n; i++)
{
printf("%d\t%d\t\t%d\t\t%d\t\t%d\t\t%d\n", p[i].pid, p[i].tat, p[i].bt, p[i].tct, p[i].wt, p[i].tatime);
}
printf("\nTotal Waiting Time: %d", twt);
printf("\nAverage Waiting Time: %.2f", (float)twt / n);
printf("\nTotal Turnaround Time: %d", ttat);
printf("\nAverage Turnaround Time: %.2f\n", (float)ttat / n);

return 0;
